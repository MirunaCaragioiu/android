<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdaugaClubBaschet"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ETDenumireClub"
        android:layout_marginTop="100dp"
        android:hint="@string/denumire_club_baschet"
        android:inputType="text"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ETNumarMembrii"
        android:hint="@string/numar_membrii_club"
        android:inputType="number"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ETAnInfiintare"
        android:hint="@string/anul_infiintarii_clubului"
        android:inputType="number"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/SpinnerTip" />

    <Button
        android:layout_width="100dp"
        android:layout_marginLeft="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/BTNSave"
        android:text="@string/salvare"
        android:background="@color/colorPrimary"/>


</LinearLayout>