<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdaugaOferta"
    android:orientation="vertical"
    android:gravity="center">

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/etAdresa"
        android:hint="Adresa"
        android:inputType="text"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/etNrCamere"
        android:hint="Nr Camere"
        android:inputType="text"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/etSuprafata"
        android:hint="Suprafata"
        android:inputType="number"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/etPerioada"
        android:hint="Perioada"
        android:inputType="date"/>
    <Spinner
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/spinnerTipL"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:id="@+id/BTNSave"
        android:text="Salveaza"/>

</LinearLayout>